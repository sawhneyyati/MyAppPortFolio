<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.yatisawhney.myappportfolio.MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Popular Movies"
        android:id="@+id/buttonPopularMovies"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/textView_appTitle"

        android:background="#2E3D49"
        android:textColor="#FFFFFF"
        android:layout_alignLeft="@+id/textView_appTitle"
        android:layout_alignStart="@+id/textView_appTitle"
        android:layout_alignRight="@+id/textView_appTitle"
        android:layout_alignEnd="@+id/textView_appTitle" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Hawk"
        android:id="@+id/buttonStockHawk"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonPopularMovies"
        android:textColor="#FFFFFF"
        android:background="#2E3D49"
        android:layout_alignLeft="@+id/buttonPopularMovies"
        android:layout_alignStart="@+id/buttonPopularMovies"
        android:layout_alignRight="@+id/buttonPopularMovies"
        android:layout_alignEnd="@+id/buttonPopularMovies" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Build It Bigger"
        android:layout_below="@+id/buttonStockHawk"
        android:id="@+id/buttonBuildItBigger"
        android:layout_marginTop="10dp"
        android:layout_alignLeft="@+id/buttonStockHawk"
        android:layout_alignStart="@+id/buttonStockHawk"
        android:layout_alignRight="@+id/buttonStockHawk"
        android:layout_alignEnd="@+id/buttonStockHawk"
        android:background="#2E3D49"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Make Your Material"
        android:id="@+id/buttonMakeYourAppMaterial"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonBuildItBigger"
        android:layout_alignLeft="@+id/buttonBuildItBigger"
        android:layout_alignStart="@+id/buttonBuildItBigger"
        android:layout_alignRight="@+id/buttonBuildItBigger"
        android:layout_alignEnd="@+id/buttonBuildItBigger"
        android:textColor="#FFFFFF"
        android:background="#2E3D49" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Go Ubiquitous"
        android:id="@+id/buttonGoUbiquitous"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/buttonMakeYourAppMaterial"
        android:layout_alignLeft="@+id/buttonMakeYourAppMaterial"
        android:layout_alignStart="@+id/buttonMakeYourAppMaterial"
        android:layout_alignRight="@+id/buttonMakeYourAppMaterial"
        android:layout_alignEnd="@+id/buttonMakeYourAppMaterial"
        android:background="#2E3D49"
        android:textColor="#FFFFFF" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/my_nanodegree_apps"
        android:id="@+id/textView_appTitle"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Capstone"
        android:id="@+id/buttonCapstone"
        android:layout_below="@+id/buttonGoUbiquitous"
        android:layout_marginTop="10dp"
        android:layout_alignRight="@+id/buttonGoUbiquitous"
        android:layout_alignEnd="@+id/buttonGoUbiquitous"
        android:layout_alignLeft="@+id/buttonGoUbiquitous"
        android:layout_alignStart="@+id/buttonGoUbiquitous"
        android:textColor="#FFFFFF"
        android:background="#2E3D49"/>


</RelativeLayout>
